<div class="row">
    <div class="col-lg-12">
   <img src="img/riksdagen.jpg" alt="" class="img-fluid">
   </div>
</div>


<div class="row mt-5 mb-5">
         <div class="col-lg-2"></div>
        <form action="/search" method="post">
            <div class="row">
                <div class="col-lg-2">
                    <input class="form-control" name="fornamn" placeholder="Förnamn" type="text">
                </div>
                <div class="col-lg-2">
                    <input class="form-control" name="efternamn" placeholder="Efternamn" type="text">
                </div>
                 <div class="col-lg-2">
                    <input class="form-control" name="parti" placeholder="Parti" type="text">
                </div>
                <div class="col-lg-2">
                    <a class="btn btn-outline-secondary btn-block" href="/">Nollställ</a>
                </div>
                <div class="col-lg-2">
                    <button class="btn btn-outline-success btn-block" type="submit">Sök</button>
                </div>
            </div>
        </form>
        <div class="col-lg-2"></div>
    
     </div> 
  <div class="row">
        <table class="table tablesorter" id="myTable">
            <thead>
                <tr>
                      
                      <th>Förnamn</th>
                      <th>Efternamn</th>
                      <th>Valkrets</th>
                      <th>Partibeteckning</th>
                </tr>
            </thead>
            {{#politiker}}
            <tbody>
                <tr>
                    <input type="text" value="{{intressent_id}}" readonly hidden>
                    <td>{{tilltalsnamn}}</td>
                    <td>{{efternamn}}</td>
                    <td>{{valkrets}}</td>
                    <td>{{parti}}</td>
                    <td><img src="{{bild_url_80}}" alt="Porträtt på riksdagsledamoten {{tilltalsnamn}} {{efternamn}}"></td>
                 
                    <td><a href="/politicians/{{intressent_id}}" class="btn btn-default" type="submit">Mer info</a></td>
                    
                </tr>
            </tbody>
            {{/politiker}}
        </table>
    </div>
    
   