                      <th>Efternamn</th>
                      <th>Valkrets</th>
                      <th>Partibeteckning</th>
                </tr>
            </thead>
            {{#politiker}}
            <tbody>
                <tr>
                    <input type="text" value="{{intressent_id}}" readonly hidden>
                    <td>{{tilltalsnamn}}</td>
                    <td>{{efternamn}}</td>
                    <td>{{valkrets}}</td>
                    <td>{{parti}}</td>
                    <td><img src="{{bild_url_80}}" alt="Porträtt på riksdagsledamoten {{tilltalsnamn}} {{efternamn}}"></td>
                 
                    <td><a href="/politicians/{{intressent_id}}" class="btn btn-default" type="submit">Mer info</a></td>
                    
                </tr>
            </tbody>
            {{/politiker}}
        </table>
